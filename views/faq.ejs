    <script>
      //sccordion script
      $(".faqWrap  .faqHead").click(function() {
        $(this)
          .next(".faqContant")
          .slideToggle()
          .parent()
          .siblings()
          .find(".faqContant:visible")
          .slideUp();
        $(this).toggleClass("active");
        $(this)
          .parent()
          .siblings()
          .find(".faqHead")
          .removeClass("active");
      });
    </script>
