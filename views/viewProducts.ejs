<%- include('partials/adminHeader')%>


    
      <form class="search-form" action="/products/search" method="POST">
        <div style="display: flex; flex-direction: row; justify-content: space-between;">
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Brand</label>
        <div class="col-sm-8">
          <select class="form-control" name="brand" required>
            <option value="" selected disabled>All</option>
            <option value="Apple">Apple</option>
            <option value="Asus">Asus</option>
            <option value="Canon">Canon</option>
            <option value="Dell">Dell</option>
            <option value="Godrej">Godrej</option>
            <option value="Hitachi">Hitachi</option>
            <option value="HP">HP</option>
            <option value="JBL">JBL</option>
            <option value="Lenovo">Lenovo</option>
            <option value="LG">LG</option>
            <option value="Mi">Mi</option>
            <option value="Onida">Oppo</option>
            <option value="Panasonic">Samsung</option>
            <option value="Sony">Sony</option>
            <option value="Vivo">Vivo</option>
            <option value="Whirlpool">Whirlpool</option>
          </select>
        </div>
      </div>

      <div class="form-group row ">
        <label class="col-sm-4 col-form-label">Category</label>
        <div class="col-sm-8">
          <select class="form-control" name="category" required>
            <option value="" selected disabled>All</option>
            <option value="Ac">Ac</option>
            <option value="Camera">Camera</option>
            <option value="Laptop">Laptop</option>
            <option value="Mobile">Mobile</option>
            <option value="Refrigerator">Refrigerator</option>
            <option value="Speaker-Headphone">Speaker/Headphones</option>
            <option value="Tv">Tv</option>
            <option value="Washing Machine">Washing Machine</option>         
          </select>
        </div>
      </div>
      <button style="height: 75%;"type="submit" class="btn btn-primary">Search</button>
    </div>
      </form>
      
      <%if(products.length==0) { %>
        <h2>Nothing to show here.</h2>
      <%}%>
  
    
    <table>
        <%if(products.length>0) { %>
      <tr>
        <th>Product Id</th>
        <th>Name</th>
        <th>Model</th>
        <th>Brand</th>
        <th>Category</th>
        <th>Price</th>
        <!-- <th>Description</th> -->
        <th>Image</th>
        <th>Edit</th>
        <th>Reviews</th>
        <th>Delete</th>
        
      </tr>
      <%}%> <% products.forEach(function(product){ %>
      <tr>
        <td><%=product.pid%></td>
        <td><%=product.name%></td>
        <td><%=product.modelNo%></td>
        <td><%=product.brand%></td>
        <td><%=product.category%></td>
        <td><%=product.price%></td>
        <!-- <td><%=product.description%></td> -->

        <td><img class="img-view"src="/<%=product.image%>" /></td>
        <td>
          <a class="btn btn-success" href="/products/<%= product._id %>/edit"
            >Edit</a
          >
        </td>
        <td>
            <a class="btn btn-info" href="/products/<%= product._id %>/reviews/view"
              >Reviews</a
            >
          </td>
        <td>
          <form
            method="POST"
            action="/products/<%= product._id %>?_method=DELETE"
          >
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </td>

      </tr>
      <%})%>
    </table>
    

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>


