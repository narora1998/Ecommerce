<html class="no-js">
  <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Ecommerce</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/css/normalize.css">
    <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/css/slick.css">
    <link rel="stylesheet" href="/stylesheets/css/slick-theme.css">
    <link rel="stylesheet" href="/stylesheets/css/jquery.datetimepicker.css">
    <link rel="stylesheet" href="/stylesheets/css/easy-responsive-tabs.css">
    <link rel="stylesheet" href="/stylesheets/css/jquery.mCustomScrollbar.css">
    <link rel="stylesheet" href="/stylesheets/css/main.css">
    <link rel="stylesheet" href="/stylesheets/css/cartbutton.css">


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="/javascript/js/vendor/modernizr-2.6.2.min.js"></script>
    <script src="/javascript/js/vendor/respond.js"></script>
  </head>
  <body>
    <div class="px-4 px-lg-0">
      <header class="container-fluid no-padding nav-container desktop-header" style="padding: 0px;">
        <div class="first-band">
          <div class="custome-container">
            <div class="become-dealer">
              <i
                style="color: black;"
                class="fa fa-phone-square"
                aria-hidden="true"
                > 9810-999-999</i
              >
            </div>
          </div>
        </div>
        <div>
          <div>
            <div class="row">
              <div class="col-md-3 col-sm-4">
                <div class="logo">
                  <a href="/"
                    ><img src="/stylesheets/ecommerce-logo.jpg" alt="logo"
                  /></a>
                </div>
          </div>
        </div>
      </header>


      <div class="main-content" style="margin-top: 10%;">
            <div class="container">
                <div>
                    <h1 style="color: rgb(3, 139, 3)">Your Order Is placed!</h1>
                    <hr style="width:75%;"/>
                </div>

                <div class="card w-75">

                    <% for(var i=0; i < order.products.length; i++) { %>

                        <div class="card mb-3">
                                <div class="row no-gutters" style="display:flex;justify-content: space-between;">
                                    <div class="col-md-3">
                                        <img src="/<%= order.products[i].image %>" class="card-img" alt="item image" style="height: 150px; object-fit: scale-down;margin-left: 5%;margin-right: 10%;margin-top: 5%;"/>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= order.products[i].brand %> <%= order.products[i].name %></h5>
                                            <!-- <h5 class="card-title"><%= order.products[i].name %></h5> -->
                                            <p class="card-text"><b>Quantiy : </b><%= order.qty[i+1] %></p>
                                            <p class="card-text"><small class="text-muted">Item purchased</small></p>
                                        </div>
                                    </div>
                                    <div >
                                        <div style="padding-top: 75%;padding-left: 75; margin: 0px; text-align: right;">
                                            <h4  style="padding: 5px;width: 100%;">Rs <%= order.products[i].price * order.qty[i+1] %></h3> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <%}%>
                                      
                <div>
                        <hr style="width:100%; height: 10px;
                        border: 1;
                        box-shadow: inset 0 9px 9px -3px rgba(250, 225, 3, 0.918);
                        -webkit-border-radius: 5px;
                        -moz-border-radius: 5px;
                        -ms-border-radius: 5px;
                        -o-border-radius: 5px;
                        border-radius: 5px;margin-top: 0%;"
                        />                          
                </div>

                <div class="mb-3" style="margin-left: 1%;margin-right:1%;display: flex;justify-content: space-between;">
                    <div>
                        <h3 >Total (Inclusive taxes @ 18%)</h3>
                    </div>
                    <div>
                        <h4>Rs <%= parseInt(order.amount) %></h4>
                    </div>
                    
                </div>
                </div>
            </div>
            <div style="margin: 3% 0px 0px 35%;">
                    <a href="/"><button type="button" class="btn btn-lg btn-warning" 
                    style="height: 8%; width:24%; color: white; font-weight: bold;
                    ">Continue Shopping!</button></a>
            </div>
        </div>

</body>
</html>