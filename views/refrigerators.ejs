  <div class="downloadTab">
    <div id="whirlpoolFridge">
      <h4 class="first-margin">Whirlpool</h4>
      <hr style="width: 93%;" />
    </div>
    <ul>
      <% products.forEach(function(product){%> <% if(product.brand ==
      "Whirlpool"||product.brand == "whirlpool"){ %>
      <li>
        <img class="image-fridge" src="/<%=product.image%>" alt="" />
        <div class="imgText">
          <div class="imgtextHead">
            <%= product.brand %> <%= product.name %>
          </div>
          <div class="imgtextHead">
            Rs <%= product.price %>
          </div>
          <div class="imgtextRow">
            <div class="rowView">
              <button class="btn btn-default">
                <a href="/products/<%= product._id %>/view"
                  >View <span><i class="fa fa-eye" aria-hidden="true"></i></span
                ></a>
              </button>
            </div>
            <div class="rowDownload">
              <button class="btn btn-default">
                <a href="/products/<%= product._id %>/add-to-cart"
                  >Add to cart
                  <span
                    ><i
                      class="fa fa-shopping-cart"
                      aria-hidden="true"
                    ></i></span
                ></a>
              </button>
            </div>
          </div>
        </div>
      </li>
      <%}%> <%})%>
    </ul>

